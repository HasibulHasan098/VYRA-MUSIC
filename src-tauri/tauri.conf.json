{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "VYRA",
  "version": "1.1.1",
  "identifier": "com.vyra.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "VYRA",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "decorations": false,
        "transparent": false,
        "devtools": false,
        "backgroundColor": "#000000"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ],
    "publisher": "FASTHAND",
    "shortDescription": "A beautiful YouTube Music desktop client",
    "longDescription": "VYRA is a modern, fast, and beautiful YouTube Music client for desktop. Stream music, download songs, view synced lyrics, and enjoy a premium music experience.",
    "category": "Music",
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installerHooks": "nsis-hooks.nsh"
      }
    }
  }
}